<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.augtons.clionplugin</id>
    <name>ESP-IDF for CLion</name>
    <vendor>augtons</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.clion.cmake</depends>
    <depends>com.intellij.clion.embedded</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
            parentId="tools"
            instance="IDFConfigS"
            id="com.template.clionplugin.settings.IDFSdkConfigSettings"
            bundle="messages.MainStringBundle"
            key="settings.IDFConfig"/>
    </extensions>


</idea-plugin>
